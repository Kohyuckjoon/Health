<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"  tools:context=".Evaluation">

    <TextView
        android:id="@+id/tv_no_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01. 주변 사람들은 나를 골초라고 여긴다."
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <RadioGroup
        android:id="@+id/rdg_01"
        android:layout_width="0dp"  android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_01"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/rd_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매우 그렇지 않다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"  android:paddingEnd="4dp"    android:drawablePadding="0dp"
            android:layout_weight="1"   />

        <RadioButton
            android:id="@+id/rd_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇지 않다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            />

        <RadioButton
            android:id="@+id/rd_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="보통이다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            />

        <RadioButton
            android:id="@+id/rd_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그렇다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            />

        <RadioButton
            android:id="@+id/rd_05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매우 그렇다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            />
    </RadioGroup>

    <View
        android:id="@+id/divider_01"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/rdg_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_no_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02. 담배가 없으면 하루를 망친다."
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider_01"
        />

    <RadioGroup
        android:id="@+id/rdg_02"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_no_02"
        android:layout_marginTop="4dp">

        <RadioButton
            android:id="@+id/rd2_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매우 그렇지 않다"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:drawablePadding="0dp"
            android:layout_weight="1"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>